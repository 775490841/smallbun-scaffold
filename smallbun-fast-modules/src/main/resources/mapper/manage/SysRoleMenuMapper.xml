<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.smallbun.fast.manage.role.dao.SysRoleMenuMapper">

    <resultMap type="org.smallbun.fast.manage.role.entity.SysRoleMenuEntity" id="RoleMenuMap">
        <!--查询菜单-->
        <association property="menu" column="menu_id" fetchType="lazy"
                    select="org.smallbun.fast.manage.menu.dao.SysMenuMapper.selectById"/>
        <!--查询角色-->
        <association property="role" column="role_id" fetchType="lazy"
                    select="org.smallbun.fast.manage.role.dao.SysRoleMapper.selectById"/>
    </resultMap>
    <!--根据角色ID获取记录-->
    <select id="findByRoleId" resultMap="RoleMenuMap">
        select * from sys_role_menu where role_id=#{role.id}
    </select>
</mapper>
